{
  "extends": "airbnb-base",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
},

  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "global-require": 0,
    "import/no-unresolved": "off",
    "import/no-cycle": "off",
    "new-cap": "off",
    "prefer-destructuring": "off",
    "max-len": "off",
    "no-alert": "off",
    "prefer-object-spread": "off",
    "object-curly-newline": "off",
    "arrow-parens": "off",
    "no-else-return": [
      "error",
      {
        "allowElseIf": true
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "log"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "tasks/**"
        ],
        "optionalDependencies": false
      }
    ]
  }
}
